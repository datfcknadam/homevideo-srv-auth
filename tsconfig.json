{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "allowJs": false,
        "types": ["node"]
    },
    "buildOptions": {
        "build": true,
        "verbose": true,
    },
    "lib": ["es2015"],
    "include": [
        "src/*",
        "src/workers"
    ],
      "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
    ]
}
